{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es5", "es6", "dom"],
    "jsx": "react",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ES2020",
    "isolatedModules": true,
    "esModuleInterop": true
  },
  "include": ["**/*.tsx", "**/*.ts"]
}
