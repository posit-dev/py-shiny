{
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "python.analysis.typeCheckingMode": "strict",
    "python.formatting.provider": "black",
    "python.linting.flake8Enabled": true,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
    },
    "editor.rulers": [
        88
    ],
    "files.exclude": {
        "**/__pycache__": true
    },
}
